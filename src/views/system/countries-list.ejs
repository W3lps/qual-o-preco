<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/home.ejs') %>
            <main>
                <% for (let country of countries) { %>
                    <article>
                        <h2>
                            <%= country.country %>
                        </h2>
                        <p>
                            <%= country.avgWage %>
                                <%= country.currency %>
                        </p>
                        <form action="/country-details/<%=country._id%>" method="GET">
                            <button type="submit">Details</button>
                        </form>
                    </article>
                    <% } %>
            </main>
    </body>

    </html>