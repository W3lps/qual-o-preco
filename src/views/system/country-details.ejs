<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/home.ejs') %>
            <main>
                <article>
                    <h2>
                        <%= country.country %>
                    </h2>
                    <p>
                        <%= country.avgWage %>
                            <%= country.currency %>
                    </p>
                    <% if(loggedIn) { %>
                        <div class="">
                            <form action="/admin/delete-country/<%=country._id%>" method="POST">
                                <button type="submit">Delete Country</button>
                            </form>
                            <a href="/admin/update-country/<%=country._id%>">Atualizar Dados</a>
                        </div>
                        <%} %>
                            <% for (let car of country.cars) {%>
                                <img src="/<%=car.imagePath %>" alt="Foto do Carro">
                                <p>
                                    <%=car.imagePath %>
                                </p>
                                <h3>
                                    <%= car.model %>
                                </h3>
                                <p>
                                    <%= car.price %>
                                        <%=country.currency%>
                                </p>
                                <% if (loggedIn) { %>
                                    <form action="/admin/delete-car/<%=car._id%>" method="POST">
                                        <input type="hidden" name="countryId" value="<%=country._id%>">
                                        <button type="submit">Delete Car</button>
                                    </form>
                                    <% }%>
                                        <% } %>

                </article>
            </main>
    </body>

    </html>