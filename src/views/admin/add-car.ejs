<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/home.ejs') %>
            <main>
                <form action="/admin/add-car" method="POST" enctype="multipart/form-data">
                    <select name="country" id="country">
                        <option value="">Selecione um país</option>
                        <% for(let country of countries) { %>
                            <option value="<%= country.country %>">
                                <%= country.country %>
                            </option>
                            <% } %>
                    </select>
                    <label for="model">Modelo do Carro:</label>
                    <input type="text" name="model" id="model">
                    <label for="price">Preço do Carro:</label>
                    <input type="number" name="price" id="price">
                    <label for="image">Selecione a imagem do carro</label>
                    <input type="file" name="image" id="image">
                    <button type="submit">Adicionar carro</button>
                </form>
            </main>
    </body>

    </html>